<%= link_to(raw('<span class="glyphicon glyphicon-plus"></span> New Book'), new_book_path, class: "btn btn-default pull-right") %>

<h1>Listing Books</h1>

<table>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <th class="book-title"><%= link_to book.name, book %></th>
      </tr>
      <tr>
        <td><%= book.description %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @books, renderer: BootstrapPagination::Rails %>

